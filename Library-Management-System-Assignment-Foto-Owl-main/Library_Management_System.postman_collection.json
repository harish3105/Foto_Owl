              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/borrow-requests",
              "host": ["{{baseUrl}}"],
              "path": ["api", "borrow-requests"]
            }
          }
        },
        {
          "name": "Approve Request",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/borrow-requests/1/approve",
