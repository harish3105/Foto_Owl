            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"bookId\": 1,\n    \"startDate\": \"2024-01-01\",\n    \"endDate\": \"2024-01-15\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/api/borrow-requests",
              "host": ["{{baseUrl}}"],
              "path": ["api", "borrow-requests"]
            }
          }
        },
        {
          "name": "Get All Requests",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
